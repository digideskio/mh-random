// A task runner that calls the Typescipt compiler (tsc) and 
// Compiles a program
{
	"version": "0.1.0",
	
	// The command is tsc.
	"command": "tsc",

	// Show the output window only if unrecognized errors occur. 
	"showOutput": "silent",
	
	"isShellCommand": true,
	
	// use the standard tsc problem matcher to find compile problems
	// in the output.
	"problemMatcher": "$tsc"
}